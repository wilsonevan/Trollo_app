<h1><%= @list.name %>
  <%= link_to edit_board_list_path(@board, @list) do %>
    <i class="icons">
      <i class="top right corner small grey pencil alternate icon"></i>
    </i>
  <% end %>
</h1>
<br />
<%= link_to "Back to #{current_user.boards.find(@list[:board_id]).name}", current_user.boards.find(@list[:board_id]), class: "ui button" %>
<%= link_to "New Task", new_list_task_path(@list), class: "ui blue button" %>
<%= link_to "Delete List", [@board, @list], method: :delete %>
<br /><br /><hr />
<h2><%= @list.tasks.length <= 0 ? "No Tasks" : "" %></h2>

<table class="ui striped table">  
  <thead class="center aligned">
    <tr>
      <th>Completed</th>
      <th>Task</th>
      <th>Details</th>
      <th>Due Date</th>
      <th>Due Time</th>
      <th />
    </tr>
  </thead>
  <tbody>
    <% @list.tasks.each do |task| %>
      <tr class="center aligned">
        <td><%= task.completed %></td>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.due_date %></td>
        <td><%= task.due_time %></td>
        <td><%= button_to "Edit", edit_list_task_path(task[:list_id],task[:id]), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>